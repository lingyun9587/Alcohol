<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alcohol.mapper.type.TypeNameMapper">
    <!--查询三级分类-->
    <select id="getTypeName" resultType="TypeName">
SELECT typeNameid,typeNamename FROM tb_typename
WHERE isdel=0 and categoryid =(
	SELECT categorythreeid FROM tb_categorythree WHERE categorythreeid=2
)
    </select>

    <insert id="addTypeName">
        INSERT INTO tb_typename values
        (#{typeName_name},#{category_id},#{isDel})
    </insert>
    <update id="modifyTypeName">
        update tb_typename set typeNameName=#{typeName_name}
    </update>
    <update id="delTypeName">
         update tb_typename set isdel=#{isDel} where typeNameId=#{typeNameId}
    </update>
</mapper>