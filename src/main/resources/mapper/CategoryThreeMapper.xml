<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alcohol.mapper.category.CategoryThreeMapper">
    <!--查询三级分类-->
    <select id="getCategoryThreeInfo" resultType="Categorythree">
        SELECT categorythree_id,categorythree_name FROM tb_categorythree
WHERE parentId =(
	SELECT categorytwo_id FROM tb_categorytwo WHERE categorytwo_id=1
)
    </select>

    <!--查询要添加的三级分类是否存在-->
    <select id="getCategoryThree" resultType="Categorythree">
        select count(1) from tb_categorythree where categorythreeName=#{categorythreeName}
    </select>
    <!--新增三级分类-->
    <insert id="addCategoryThree">
        insert into tb_categorythree values
        (#{categorythree_name},#{parentId},#{weight})
    </insert>

    <!--修改-->
    <update id="updateCategorythree">
        update tb_categorythree set categorythree_name=#{categorythree_name}

    </update>

    <!--删除-->
    <delete id="delCategorythree">
        delete from tb_categorythree where categorythree_id=#{categorythree_id}
    </delete>

</mapper>
