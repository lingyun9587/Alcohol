<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alcohol.mapper.UseraccountMapper">

    <insert id="insertUserAccount">
       insert into tb_useraccount(account_id,phone,user_id,email,password,create_time,last_time)
       value(#{accountId},#{phone},#{userId},#{email},#{password},#{createTime},#{lastTime})
    </insert>
    <select id="getUserByUserName" resultType="com.alcohol.pojo.Useraccount">
        SELECT account_id,phone,user_id,email,`password`,create_time,last_time
         FROM tb_useraccount
           WHERE phone = #{username} OR email = #{username} OR user_id = (SELECT user_id FROM tb_user WHERE membership_name = #{username})
    </select>
</mapper>