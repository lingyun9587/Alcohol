<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alcohol.mapper.category.CategoryTwoMapper">

    <!--查询二级分类-->
    <select id="getCategoryTwoInfo" resultType="Categorytwo">
       SELECT categorytwoid,categorytwoname FROM tb_categorytwo
        WHERE isdel=0 and parentId =(
	        SELECT categoryoneid FROM tb_categoryone
	      WHERE categoryoneid=1
          )
    </select>

    <!--查询要添加的二级分类是否存在-->
    <select id="getCategoryTwo" resultType="Categorytwo">
        select count(1) from tb_categorytwo where categorytwoName=#{categorytwo_name} where isdel=0
    </select>
    
    <!--新增二级分类-->
    <insert id="addCategoryTwo">
        insert into tb_categorytwo values
        (#{categorytwo_name},#{parentId},#{weight},#{isdel})
    </insert>

    <!--修改-->
    <update id="updateCategorytwo">
        update tb_categorytwo set categorytwoName=#{categorytwo_name}

    </update>

    <!--删除-->
    <delete id="delCategorytwo">
        update tb_categorytwo set isdel=#{isdel} where categorytwoId=#{categorytwo_id}
    </delete>
</mapper>
