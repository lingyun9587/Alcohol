<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alcohol.mapper.NoticeMapper">
    <select id="list" resultType="Notice">
        SELECT * FROM tb_notice
    </select>
    <insert id="addNotice">
        INSERT INTO tb_notice(title,content,create_time,`type`) VALUES(title,content,create_time,type)
    </insert>
    <update id="updateNotice">
        UPDATE tb_notice SET title=title,content=content,create_time=create_time,`type`=type WHERE notice_id = notice_id
    </update>
    <delete id="deleteNotice">
        delete from tb_notice where notice_id = noticeId
    </delete>
</mapper>