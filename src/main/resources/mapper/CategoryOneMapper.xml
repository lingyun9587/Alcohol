<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alcohol.mapper.category.CategoryOneMapper">
    <!--查询一级分类-->
    <select id="getCategoryOneInfo" resultType="Categoryone">
        SELECT categoryone_id,categoryont_name FROM tb_categoryone
    </select>
    <!--查询要添加的分类是否存在-->
    <select id="getCategoryone" resultType="Categoryone">
        SELECT COUNT(1) FROM tb_categoryone WHERE categoryont_name=#{categoryont_name}
    </select>
    <!--添加一级分类-->
    <insert id="addCategoryOne">
          insert into tb_categoryone values
          (#{categoryont_name},#{weight})
    </insert>
    
    <!--修改-->
    <update id="updateCategoryone">
        update tb_categoryone set categoryont_name=#{categoryont_name}

    </update>
    
    <!--删除-->
    <delete id="delCategoryone">
        delete from tb_categoryone where categoryone_id=#{categoryone_id}
    </delete>
    
</mapper>
